@if (ShowAlert)
{
    <MudAlert Severity=Severity Variant=Variant.Filled data-student-id=@StudentId
              ShowCloseIcon CloseIconClicked=CloseCallback @attributes=@OtherAttributes>@Message(StudentId!)</MudAlert>
}

@code {
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? OtherAttributes { get; set; }

    [Parameter, EditorRequired]
    public string? StudentId { get; set; }

    [Parameter, EditorRequired]
    public required Func<string, string> Message { get; set; }

    [Parameter]
    public EventCallback CloseCallback { get; set; }

    [Parameter]
    public Severity Severity { get; set; }

    public bool ShowAlert => StudentId is not null;
}
